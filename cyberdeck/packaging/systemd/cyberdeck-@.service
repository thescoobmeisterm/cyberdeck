[Unit]
Description=Cyberdeck Service %i
After=network-online.target mosquitto.service
Wants=network-online.target

[Service]
User=pi
WorkingDirectory=/home/pi/cyberdeck/cyberdeck
ExecStart=/home/pi/cyberdeck/cyberdeck/.venv/bin/python services/%i.py
Restart=on-failure

[Install]
WantedBy=multi-user.target
